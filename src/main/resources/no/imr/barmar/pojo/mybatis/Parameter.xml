<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper      
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"      
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="no.imr.barmar.pojo.mybatis.ParameterMapper"> 

	<resultMap id="ParameterResult" type="no.imr.barmar.pojo.mybatis.Parameter">
    	<id property="id" column="id"/>
    	<result property="name" column="name"/>
	</resultMap>

	<sql id="parameterSelect">
   		SELECT id, name
    </sql>
    
	<select id="getParameter" resultMap="ParameterResult" resultType="java.util.ArrayList" parameterType="Long">
    	<include refid="parameterSelect" />
   		FROM parameter where id=#{id}
	</select>
				
</mapper>